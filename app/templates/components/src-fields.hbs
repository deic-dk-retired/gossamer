<div class="field">
  <label>Source Host or CIDR
    {{ui-popup tagName="i" class="info icon blue tiny" content="Empty source ip/cidr means any/all sources" variation="mini" position="right center"}}
  </label>
  {{input type="text" name="srcip" value=srcip placeholder="e.g. 192.0.2.1 or 192.0.2.0/24"}}
</div>

{{#if (not-eq protocol 'icmp')}}
  <div class="field">
    <label>Source Port {{ui-popup tagName="i" class="info icon blue tiny" content="Empty port means any/all ports; on the right you can see the entered value" variation="mini wide" position="right center"}} <span class="ui green header tiny">`{{srcport}}`</span>
    </label>
    {{input type="text" name="srcport" value=srcport placeholder="e.g 80"}}
  </div>
{{/if}}
